# File Storage requires stateful ingress to TCP ports 111, 2048, 2049, and 2050
# and stateful ingress to UDP ports 111 and 2048. For more information, please
# check U(https://docs.cloud.oracle.com/iaas/Content/File/Tasks/securitylistsfilestorage.htm)

sample_public_subnet_ingress_security_rules:
  - source: "{{ cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 2048
        max: 2050
  - source: "{{ cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 111
        max: 111
  - source: "{{ cidr_block }}"
    protocol: "{{ udp_protocol }}"
    udp_options:
      destination_port_range:
        min: 2048
        max: 2048
  - source: "{{ cidr_block }}"
    protocol: "{{ udp_protocol }}"
    udp_options:
      destination_port_range:
        min: 111
        max: 111
  - source: "{{ all_cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 22
        max: 22

