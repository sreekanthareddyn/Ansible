sample_public_subnet_egress_security_rules:
  # Allow access to HTTP(S) for cloud-init (yum, pip to work)
  - destination: "{{ all_cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ http_port }}
        max: {{ http_port }}
  - destination: "{{ all_cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ https_port }}
        max: {{ https_port }}
  - destination: "{{ subnet_cidr_block_ad2 }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 22
        max: 22

  - destination: "{{ cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 2048
        max: 2050
  - destination: "{{ cidr_block }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
      destination_port_range:
        min: 111
        max: 111
  - destination: "{{ cidr_block }}"
    protocol: "{{ udp_protocol }}"
    udp_options:
      destination_port_range:
        min: 2048
        max: 2048
  - destination: "{{ cidr_block }}"
    protocol: "{{ udp_protocol }}"
    udp_options:
      destination_port_range:
        min: 111
        max: 111
