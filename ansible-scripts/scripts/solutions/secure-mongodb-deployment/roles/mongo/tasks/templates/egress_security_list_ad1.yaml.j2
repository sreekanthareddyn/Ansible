# A set of security rules that is needed during MongoDB provisioning
ad1_egress_security_rules:
  # Allow outbound Mongo connections to AD2 for replication
  - destination: "{{ cidr_block_private_ad2 }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
        destination_port_range:
            min: {{ mongodb_port }}
            max: {{ mongodb_port }}
  # Allow access to HTTP(S) for cloud-init (yum, pip to work)
  - destination: "{{ quad_zero_route }}"
    protocol: "{{ TCP_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ HTTP_port }}
        max: {{ HTTP_port }}
  - destination: "{{ quad_zero_route }}"
    protocol: "{{ TCP_protocol }}"
    tcp_options:
      destination_port_range:
        min: {{ HTTPS_port }}
        max: {{ HTTPS_port }}

# A limited set of security rules that can be set after mongodb is provisioned on the MongoDB hosts
secured_ad1_egress_security_rules:
  # Allow outbound Mongo connections to AD2 for replication
  - destination: "{{ cidr_block_private_ad2 }}"
    protocol: "{{ tcp_protocol }}"
    tcp_options:
        destination_port_range:
            min: {{ mongodb_port }}
            max: {{ mongodb_port }}
